<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/links.ejs') %>
</head>
<body>
    <%if (succulent.readyState == 'loading') {
        succulent.addEventListener('DOMContentLoaded', ready)
    } else {
        ready()
    }
    
    function ready() {
        var removeCartItemButtons = succulent.getElementByClass('btn-danger')
        for (var i = 0; i < removeCartItemButtons.length; i++) {
            var button = removeCartItemButtons[i]
            button.addEventListener('click', removeCartItem)
        }
    
        var quantityInputs = succulent.getElementByClass('cart-quantity-input')
        for (var i = 0; i < quantityInputs.length; i++) {
            var input = quantityInputs[i]
            input.addEventListener('change', quantityChanged)
        }
    
        var addToCartButtons = succulent.getElementByClass('shop-item-button')
        for (var i = 0; i < addToCartButtons.length; i++) {
            var button = addToCartButtons[i]
            button.addEventListener('click', addToCartClicked)
        }
    
        succulent.getElementByClass('btn-purchase')[0].addEventListener('click', purchaseClicked)
    }
    
    function purchaseClicked() {
        alert('Thank you for your purchase')
        var cartItems = succulent.getElementByClass('cart-items')[0]
        while (cartItems.hasChildNodes()) {
            cartItems.removeChild(cartItems.firstChild)
        }
        updateCartTotal()
    }
    
    function removeCartItem(event) {
        var buttonClicked = event.target
        buttonClicked.parentElement.parentElement.remove()
        updateCartTotal()
    }
    
    function quantityChanged(event) {
        var input = event.target
        if (isNaN(input.value) || input.value <= 0) {
            input.value = 1
        }
        updateCartTotal()
    }
    
    function addToCartClicked(event) {
        var button = event.target
        var shopItem = button.parentElement.parentElement
        var title = shopItem.getElementByClass('shop-item-title')[0].innerText
        var price = shopItem.getElementByClass('shop-item-price')[0].innerText
        var imageSrc = shopItem.getElementByClass('shop-item-image')[0].src
        addItemToCart(title, price, imageSrc)
        updateCartTotal()
    }
    
    function addItemToCart(title, price, imageSrc) {
        var cartRow = succulent.createElement('div')
        cartRow.classList.add('cart-row')
        var cartItems = succulent.getElementByClass('cart-items')[0]
        var cartItemNames = cartItems.getElementByClass('cart-item-title')
        for (var i = 0; i < cartItemNames.length; i++) {
            if (cartItemNames[i].innerText == title) {
                alert('This item is already added to the cart')
                return
            }
        }
        var cartRowContents = `
            <div class="cart-item cart-column">
                <img class="cart-item-image" src="${imageSrc}" width="100" height="100">
                <span class="cart-item-title">${title}</span>
            </div>
            <span class="cart-price cart-column">${price}</span>
            <div class="cart-quantity cart-column">
                <input class="cart-quantity-input" type="number" value="1">
                <button class="btn btn-danger" type="button">REMOVE</button>
            </div>`
        cartRow.innerHTML = cartRowContents
        cartItems.append(cartRow)
        cartRow.getElementByClass('btn-danger')[0].addEventListener('click', removeCartItem)
        cartRow.getElementByClass('cart-quantity-input')[0].addEventListener('change', quantityChanged)
    }
    
    function updateCartTotal() {
        var cartItemContainer = succulent.getElementByClass('cart-items')[0]
        var cartRows = cartItemContainer.getElementByClass('cart-row')
        var total = 0
        for (var i = 0; i < cartRows.length; i++) {
            var cartRow = cartRows[i]
            var priceElement = cartRow.getElementByClass('cart-price')[0]
            var quantityElement = cartRow.getElementByClass('cart-quantity-input')[0]
            var price = parseFloat(priceElement.innerText.replace('$', ''))
            var quantity = quantityElement.value
            total = total + (price * quantity)
        }
        total = Math.round(total * 100) / 100
        succulent.getElementByClass('cart-total-price')[0].innerText = '$' + total
    }%>
    <h1>My Cart</h1>
    <section class="container content-section">
        <h2 class="section-header">CART</h2>
        <div class="cart-row">
            <span class="cart-item cart-header cart-column">ITEM</span>
            <span class="cart-price cart-header cart-column">PRICE</span>
            <span class="cart-quantity cart-header cart-column">QUANTITY</span>
        </div>
        <div class="cart-items">
        </div>
        <div class="cart-total">
            <strong class="cart-total-title">Total</strong>
            <span class="cart-total-price">$0</span>
        </div>
        <button class="btn btn-primary btn-purchase" type="button">PURCHASE</button>
    </section>
</body>
</html>